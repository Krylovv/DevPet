pipeline {
    agent {
        node {
            label 'perm-ubuntu-agent'
        }
    }
    environment {
        TAG = VersionNumber(versionNumberString: '${BUILD_DATE_FORMATTED, "yyyyMMdd"}', versionPrefix: 'v', worstResultForIncrement: 'SUCCESS')
    }
    triggers {
        pollSCM '*/5 * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Build stage"
                sh 'mkdir DevPet'
                sh 'cd DevPet && git clone https://github.com/Krylovv/DevPet/'
                sh 'docker build -t kryloff/devpet:${TAG} ./DevPet/Code/WebApp'
                sh 'rm -rf DevPet'
            }
        }
        stage('Test') {
            steps {
                echo "Test stage"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy stage"
                sh 'docker push kryloff/devpet:${TAG}'
                sh 'minikube kubectl -- set image deployment/devpet-app devpet-app=kryloff/devpet:${TAG}'
                sh 'minikube kubectl -- port-forward service/devpet-service --address=0.0.0.0 8001'
            }
        }
    }
}

