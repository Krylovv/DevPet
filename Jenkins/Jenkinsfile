pipeline {
    agent {
        node {
            label 'devpet-docker-agent '
        }
    }
    environment {
        TAG = VersionNumber(versionNumberString: '${BUILD_DATE_FORMATTED, "yyyyMMdd"}', versionPrefix: 'v', worstResultForIncrement: 'SUCCESS')
    }
    triggers {
        pollSCM '*/5 * * * *'
    }
    stages {
        stage('Build') {
            steps {
                echo "Build stage"
                sh 'apt-get update && \
                    apt-get -qy full-upgrade && \
                    apt-get install -qy curl && \
                    apt-get install -qy curl && \
                    curl -sSL https://get.docker.com/ | sh'
                sh 'git clone https://github.com/Krylovv/DevPet/ && cd ./DevPet/Code/WebApp'
                sh 'docker build -t kryloff/devpet:${TAG} .'
            }
        }
        stage('Test') {
            steps {
                echo "Test stage"
            }
        }
        stage('Deploy') {
            steps {
                echo "Deploy stage"
                sh 'docker push kryloff/devpet:${TAG}'
                sh 'minikube kubectl -- set image deployment/devpet-app devpet-app=kryloff/devpet:${TAG}'
                sh 'minikube kubectl -- port-forward service/devpet-service --address=0.0.0.0 8001'
            }
        }
    }
}

